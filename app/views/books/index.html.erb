<% if @book.errors.any? %>
<h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      <%= flash[:notice] %>
      <%= render 'list', book: @book, user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image %></td>
            <td>
              <span><%= link_to "#{book.title}", book_path(book.id) %></span>
            </td>
            <td><%= book.opinion %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
