<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      <%= flash[:notice] %>
      <%= render 'list', book: @book, user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <% @books.each do |book| %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <span><%= link_to "#{book.title}", book_path(book.id) %></span>
            </td>
            <td><%= book.opinion %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
