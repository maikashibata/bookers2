<div class="container">
  <div class="col-md-3">
    <%= render 'list', user: @book.user, book: Book.new %>
  </div>
  
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

    <table class="table table-striped">
      <tbody>
        <tr>
          <td>
            <span>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <%= link_to "#{@book.user.name}", user_path(@book.user.id) %>
            </span>
          </td>
          <td>
            <span><%= link_to "#{@book.title}", book_path(@book.id) %></span>
          </td>
          <td><%= @book.body %></td>
          <span>
            <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path(@book.id), class: 'btn btn-success' do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?", class: 'btn btn-danger' do %>
                Destroy
              <% end %>
            </td>
            <% end %>
          </span>
        </tr>
      </tbody>
    </table>
  </div>
</div>
