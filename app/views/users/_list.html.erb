<h2>User info</h2>
<%= image_tag book.get_profile_image %>
<p>name<%= book.name %></p>
<p>introduction<%= book.introduction %></p>
<span><%= link_to "Edit", edit_user_path(book.id) %></span>

<h2>New book</h2>
<% if user.errors.any? %>
  <%= user.errors.count %> errors prohibited this user from being saved:
  <ul>
    <% user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: user, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :opinion %>

  <%= f.submit 'Create Book' %>
<% end %>
