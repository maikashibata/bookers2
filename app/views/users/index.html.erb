<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= flash[:notice] %>
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td>
              <span><%= link_to "show", user_path(user.id) %></span>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>
