<div class="mx-auto">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <%= @user.errors.count %> errors prohibited this user from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @user do |f| %>
    <p>Name</p>
    <label for="inputName"></label>
    <%= f.text_field :name, autofocus: true, id:"inputName" %>
    <p>Image</p>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    <p>Introduction</p>
    <label for="inputIntroduction"></label>
    <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
</div>