<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
              </td>
              <td>
                <span><%= link_to book.title, book_path(book.id) %></span>
              </td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
